!!! XML
!!! Strict
%html{ :xmlns => "http://www.w3.org/1999/xhtml", :lang => "en" }
  %head
    %meta{ 'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8" }
    %meta{ 'http-equiv' => "Content-Language", :content => "en" }
    %meta{ :name => "keywords", :content => "Groups, Meetups, Events, Ruby on Rails, Calendar, Simple" }
    %meta{ :name => "description", :content => "Create your own FREE group at GroupieGuide! Keep your real-life group organized." }
    %meta{ :name => "author", :content => "Fixie" }
    %meta{ :name => "robots", :content => "all, follow" }
    %meta{ :name => "googlebot", :content => "index, follow, snippet, archive" }

    %link{ :rel => "shortcut icon", :href => "/favicon.ico?a" }
    %link{ :rel => "icon", :href=> "/favicon.ico?a" }

    = javascript_include_tag 'prototype', 'effects', 'application', :cache => "cache/all"
    = stylesheet_link_tag 'yui', 'base', 'screen', :cache => "cache/all"

    = yield(:head)

    /[if lte IE 7]
      = stylesheet_link_tag 'ie_hacks'
    /[if lt IE 7]
      = stylesheet_link_tag 'ie6_hacks'
    
    %title 
      == GroupieGuide 
      - if @page_title
        == : #{ @page_title}
    

  %body
    #hd
      This is the header info
    #doc2.yui-t1
      #bd
        #yui-main
          .yui-b
            = yield
    #ft-wrapper    
