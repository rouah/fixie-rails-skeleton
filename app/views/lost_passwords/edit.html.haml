= flash_messages :user
- form_for @user, :url => lost_password_path(@user.password_reset_code), :method => :put do |f|
  %p
    %label{:for => "user_password"} New Password:
    %br
    = f.password_field :password
  
  %p
    %label{:for=>"user_password_confirmation"} Confirm New Password:
    %br
    = f.password_field :password_confirmation
  
  %p
    = link_to "cancel", new_session_url

  %p
    = submit_tag
    = link_to "cancel", new_session_url
